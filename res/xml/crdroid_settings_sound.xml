<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:lineage="http://schemas.android.com/apk/res-auto"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/sound_title"
    >

    <!-- Pulse music visualizer -->
    <Preference
        android:key="pulse_settings"
        android:icon="@drawable/ic_pulse"
        android:title="@string/pulse_settings"
        android:summary="@string/pulse_settings_summary"
        android:fragment="com.crdroid.settings.fragments.sound.PulseSettings" />

    <!-- Live volume steps -->
    <Preference
        android:key="volume_steps"
        android:icon="@drawable/ic_settings_sound"
        android:title="@string/volume_steps_title"
        android:summary="@string/volume_steps_summary"
        android:fragment="com.crdroid.settings.fragments.sound.VolumeSteps" />

    <!-- Screenshot Sound  -->
    <com.crdroid.settings.preferences.SystemSettingSwitchPreference
        android:key="screenshot_shutter_sound"
        android:icon="@drawable/ic_cellphone_sound"
        android:title="@string/screenshot_shutter_sound_title"
        android:summary="@string/screenshot_shutter_sound_summary"
        android:defaultValue="true" />

    <!-- Adaptive Playback -->
    <Preference
        android:key="adaptive_playback_settings"
        android:icon="@drawable/ic_settings_sound"
        android:title="@string/adaptive_playback_title"
        android:summary="@string/adaptive_playback_summary"
        android:fragment="com.crdroid.settings.fragments.sound.AdaptivePlayback" />

    <ListPreference
        android:key="sonif_a2dp_pref"
        android:icon="@drawable/ic_settings_notification"
        android:title="@string/sound_sonif_a2dp_title"
        android:entries="@array/sonif_a2dp_listentries"
        android:entryValues="@array/sonif_a2dp_listvalues"
        android:defaultValue="0"
        android:summary="%s" />

    <!-- Volume panel -->
    <PreferenceCategory
        android:key="volume_panel"
        android:title="@string/volume_panel_category" >

        <lineageos.preference.LineageSecureSettingSwitchPreference
            android:key="volume_panel_on_left"
            android:icon="@drawable/ic_settings_sound"
            android:title="@string/volume_panel_on_left_title" />

        <com.crdroid.settings.preferences.SystemSettingSeekBarPreference
            android:key="volume_dialog_timeout"
            android:icon="@drawable/ic_music_note"
            android:title="@string/volume_dialog_timeout_title"
            android:defaultValue="3"
            android:max="10"
            settings:min="1"
            settings:units="@string/unit_seconds" />
    </PreferenceCategory>

    <!-- In-call feedback -->
    <PreferenceCategory
        android:key="incall_vib_options"
        android:title="@string/incall_vibration_category" >

        <com.crdroid.settings.preferences.SystemSettingSwitchPreference
            android:key="vibrate_on_connect"
            android:icon="@drawable/ic_vibrate"
            android:title="@string/incall_vibrate_connect_title"
            android:defaultValue="false" />

        <com.crdroid.settings.preferences.SystemSettingSwitchPreference
            android:key="vibrate_on_callwaiting"
            android:icon="@drawable/ic_vibrate"
            android:title="@string/incall_vibrate_call_wait_title"
            android:defaultValue="false" />

        <com.crdroid.settings.preferences.SystemSettingSwitchPreference
            android:key="vibrate_on_disconnect"
            android:icon="@drawable/ic_vibrate"
            android:title="@string/incall_vibrate_disconnect_title"
            android:defaultValue="false" />
    </PreferenceCategory>


    <Preference
            android:key="audio_tweaks_a2dp_last_codec"
            android:summary="%s"
            android:title="@string/audio_tweaks_a2dp_last_codec_title"
            android:selectable="false" />

    <Preference
            android:key="audio_tweaks_a2dp_last_bitrate"
            android:summary="%s"
            android:title="@string/audio_tweaks_a2dp_last_bitrate_title"
            android:selectable="false" />


</PreferenceScreen>
