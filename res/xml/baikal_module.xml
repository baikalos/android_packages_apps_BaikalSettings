<PreferenceScreen 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    xmlns:lineage="http://schemas.android.com/apk/res-auto"
    android:title="@string/baikalos_module_title">

        <com.crdroid.settings.preferences.GlobalSettingSwitchPreference
            android:key="baikalos_module_gms"
            android:defaultValue="false"
            android:title="@string/baikalos_module_gms_title"
            android:summary="@string/baikalos_module_gms_summary" />

        <com.crdroid.settings.preferences.SecureSettingSwitchPreference
            android:key="baikalos_module_gms_aa"
            android:defaultValue="false"
            android:title="@string/baikalos_module_gms_aa_title"
            android:summary="@string/baikalos_module_gms_aa_summary"
            android:dependency="baikalos_module_gms" />

        <com.crdroid.settings.preferences.SecureSettingSwitchPreference
            android:key="baikalos_module_gms_assistant"
            android:defaultValue="false"
            android:title="@string/baikalos_module_gms_assistant_title"
            android:summary="@string/baikalos_module_gms_assistant_summary"
            android:dependency="baikalos_module_gms" />

        <com.crdroid.settings.preferences.SecureSettingSwitchPreference
            android:key="baikalos_module_hms"
            android:defaultValue="false"
            android:title="@string/baikalos_module_hms_title"
            android:summary="@string/baikalos_module_hms_summary" />

        <com.crdroid.settings.preferences.SecureSettingSwitchPreference
            android:key="baikalos_module_fdroid"
            android:defaultValue="false"
            android:title="@string/baikalos_module_fdroid_title"
            android:summary="@string/baikalos_module_fdroid_summary" />

        <com.crdroid.settings.preferences.SecureSettingSwitchPreference
            android:key="baikalos_module_aurora"
            android:defaultValue="false"
            android:title="@string/baikalos_module_aurora_title"
            android:summary="@string/baikalos_module_aurora_summary" />

</PreferenceScreen>
